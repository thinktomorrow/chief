{
    "name": "thinktomorrow/chief",
    "description": "Chief site management application",
    "keywords": [
        "site management",
        "laravel",
        "think tomorrow"
    ],
    "license": "none",
    "type": "chief-cms",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "astrotomic/laravel-translatable": "^11.9",
        "doctrine/dbal": "^3.1",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^9.11",
        "laravel/ui": "^3.2",
        "maennchen/zipstream-php": "^2.1",
        "ramsey/uuid": "^4.1",
        "spatie/laravel-activitylog": "^4.5",
        "spatie/laravel-permission": "^5.0",
        "spatie/laravel-sitemap": "^6",
        "thinktomorrow/assetlibrary": "^0.8.4",
        "thinktomorrow/dynamic-attributes": "^0.4.1",
        "thinktomorrow/squanto": "^3.0.1",
        "thinktomorrow/url": "~2.0.0",
        "thinktomorrow/vine": "^0.4.4"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.6",
        "filp/whoops": "^2.9",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.4",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.1",
        "orchestra/testbench": "^7.5",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Thinktomorrow\\Chief\\App\\": "app/",
            "Thinktomorrow\\Chief\\": "src/"
        },
        "files": [
            "src/Shared/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Thinktomorrow\\Chief\\Tests\\": "tests/",
            "Thinktomorrow\\Chief\\Migrate\\": "migrate/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Thinktomorrow\\Chief\\App\\Providers\\ChiefServiceProvider"
            ]
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
