{
    "name": "thinktomorrow/chief",
    "description": "Chief skeleton application",
    "keywords": ["framework", "laravel", "thinktomorrow"],
    "license": "none",
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.6.*",
        "laravel/tinker": "^1.0",
        "bugsnag/bugsnag-laravel": "^2.9",
        "consoletvs/charts": "5.*",
        "dimsav/laravel-translatable": "^9.0",
        "doctrine/dbal": "^2.5",
        "laravelcollective/html": "^5.6",
        "spatie/laravel-image-optimizer": "^1.0",
        "spatie/laravel-permission": "^2.9",
        "thinktomorrow/assetlibrary": "^0.4",
        "thinktomorrow/locale": "^1.5",
        "thinktomorrow/squanto": "^0.4"
    },
    "require-dev": {
        "filp/whoops": "^2.1",
        "barryvdh/laravel-debugbar": "^3.1",
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~7.0",
        "nunomaduro/collision": "^2.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Chief\\" : "chief-core/"
        },
        "files": [
            "src/helpers.php",
            "chief-core/utils/vendors/htmlLawed.php",
            "chief-core/utils/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
