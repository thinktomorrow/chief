{
    "name": "thinktomorrow/chief",
    "description": "Chief skeleton application",
    "keywords": ["framework", "laravel", "thinktomorrow"],
    "license": "none",
    "type": "project",
    "require": {
        "php": ">=7.0",
        "bugsnag/bugsnag-laravel": "^2.4",
        "dimsav/laravel-translatable": "^7.0",
        "doctrine/dbal": "^2.5",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "^1.0",
        "spatie/laravel-medialibrary": "^4.0",
        "spatie/laravel-permission": "^2.1",
        "thinktomorrow/locale": "^1.3",
        "thinktomorrow/squanto": "^0.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^2.2",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Chief\\" : "chief-core/"
        },
        "files": [
            "chief-core/utils/vendors/htmlLawed.php",
            "chief-core/utils/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
